# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Security - API Key for secure endpoints
PUBLIC_API_KEY=your-secure-api-key-here

# Payment Provider Configuration
# Options: 'stripe' or 'lemon' (lemonsqueezy)
# Change this to switch between payment providers
VITE_PAYMENT_PROVIDER=lemon

# Lemon Squeezy Configuration
# Get these from your Lemon Squeezy dashboard
VITE_LEMON_VARIANT_CREATOR=your_creator_variant_id
VITE_LEMON_VARIANT_DIRECTOR=your_director_variant_id

# Stripe Configuration (for backward compatibility)
# Get these from your Stripe dashboard
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_creator_monthly
VITE_STRIPE_PRO_YEARLY_PRICE_ID=price_creator_yearly
VITE_STRIPE_DIRECTOR_MONTHLY_PRICE_ID=price_director_monthly
VITE_STRIPE_DIRECTOR_YEARLY_PRICE_ID=price_director_yearly

# Server-side Environment Variables (for Supabase Edge Functions)
# These should be configured in Supabase Dashboard > Edge Functions > Secrets

# Lemon Squeezy Server-side
# LEMON_API_KEY=your_lemon_api_key
# LEMON_STORE_ID=your_lemon_store_id
# LEMON_VARIANT_CREATOR=your_creator_variant_id
# LEMON_VARIANT_DIRECTOR=your_director_variant_id
# LEMON_WEBHOOK_SECRET=your_webhook_secret

# Stripe Server-side
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Application URL
# APP_URL=https://your-domain.com
